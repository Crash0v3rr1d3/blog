---
import Link from '@/components/Link.astro'
import { buttonVariants } from '@/components/react/ui/button'
import { cn } from '@/lib/utils'
import { Icon } from 'astro-icon/components'

const { prevWriteup, nextWriteup } = Astro.props
---

<div class="col-start-2 flex flex-col gap-4 sm:flex-row">
  <Link
    href={nextWriteup ? `/writeups/${nextWriteup.id}` : '#'}
    class={cn(
      buttonVariants({ variant: 'outline' }),
      'rounded-xl group flex items-center justify-start w-full sm:w-1/2 h-full',
      !nextWriteup && 'pointer-events-none opacity-50 cursor-not-allowed',
    )}
    aria-disabled={!nextWriteup}
  >
    <div class="mr-2 flex-shrink-0">
      <Icon
        name="lucide:arrow-left"
        class="size-4 transition-transform group-hover:-translate-x-1"
      />
    </div>
    <div class="flex flex-col items-start text-wrap">
      <span class="text-left text-xs text-muted-foreground">Next Writeup</span>
      <span class="w-full text-ellipsis text-pretty text-left text-sm"
        >{nextWriteup?.data.title || 'Latest Writeup!'}</span
      >
    </div>
  </Link>
  <Link
    href={prevWriteup ? `/writeups/${prevWriteup.id}` : '#'}
    class={cn(
      buttonVariants({ variant: 'outline' }),
      'rounded-xl group flex items-center justify-end w-full sm:w-1/2 h-full',
      !prevWriteup && 'pointer-events-none opacity-50 cursor-not-allowed',
    )}
    aria-disabled={!prevWriteup}
  >
    <div class="flex flex-col items-end text-wrap">
      <span class="text-right text-xs text-muted-foreground">Previous Writeup</span
      >
      <span class="w-full text-ellipsis text-pretty text-right text-sm"
        >{prevWriteup?.data.title || 'Last Writeup!'}</span
      >
    </div>
    <div class="ml-2 flex-shrink-0">
      <Icon
        name="lucide:arrow-right"
        class="size-4 transition-transform group-hover:translate-x-1"
      />
    </div>
  </Link>
</div>
